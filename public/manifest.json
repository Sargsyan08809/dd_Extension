{
  "name": "CryptoHelm",
  "description": "CryptoHelm helps you detect unverified contracts addresses in dapps and prevents scam and phishing. Web3 Antivirus, wallet protector",
  "version": "0.0.0.1",
  "manifest_version": 3,
  "action": {
      "default_popup": "index.html",
      "default_title": "Open the popup"
  },
  "commands": {
      "_execute_action": {
          "suggested_key": {
              "default": "Ctrl+Shift+K",
              "mac": "Command+Shift+K"
          },
          "description": "Open the popup"
      }
  },
  "permissions": [
    "activeTab", "scripting", "management"
  ],
  "externally_connectable": {
      "matches": ["*://*/*"]
  },
  "content_scripts": [
    {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["./static/js/content.js"]
    }
  ],
  "icons": {
      "192": "./logo192.png"
  }
}