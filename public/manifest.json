{
  "name": "MetaScan",
  "description": "Yes",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
      "default_popup": "index.html",
      "default_title": "Open the popup"
  },
  "commands": {
      "_execute_action": {
          "suggested_key": {
              "default": "Ctrl+Shift+K",
              "mac": "Command+Shift+K"
          },
          "description": "Open the popup"
      }
  },
  "permissions": [
    "activeTab", "scripting", "management"
  ],
  "externally_connectable": {
      "matches": ["*://*/*"]
  },
  "content_scripts": [
    {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["./static/js/content.js"]
    }
  ],
  "icons": {
      "16": "logo192.png",
      "48": "logo192.png",
      "128": "logo192.png"
  }
}